<UserControl x:Name="simulationUserControl1" x:Class="InteractiveBrain.simulationUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InteractiveBrain"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Width="680" Height="600">
    <Canvas HorizontalAlignment="Left" Height="600" VerticalAlignment="Top" Width="680">
        <TextBox IsReadOnly="True"  Height="225" Canvas.Left="140" TextWrapping="Wrap" Text="Travis is now in charge of the simulation for this page. This page is still under construction. This page will have different animations to demonstrate healthy and unhealthy behaviors such as how substances may affect dopamine levels or how different areas of the brain &quot;light up&quot; looking at CT scans while participating in healthy activities such as reading or exercise" Canvas.Top="160" Width="400" Background="{x:Null}" BorderBrush="{x:Null}" FontSize="20" TextAlignment="Center" TextChanged="TextBox_TextChanged"/>
    </Canvas>
</UserControl>
