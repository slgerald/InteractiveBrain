        <Button x:Name="nextButton" Click="NextButton_Click" Content="Next" Width="80" Canvas.Left="594" Canvas.Top="188" FontSize="18" FontFamily="Tahoma" BorderBrush="{x:Null}" ToolTip="Next"/>
