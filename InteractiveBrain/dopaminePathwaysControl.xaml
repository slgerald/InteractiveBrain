        <ComboBox x:Name="videoList" Text="Reward Pathways" Canvas.Left="10" Canvas.Top="10" Width="200" SelectionChanged="videoList_SelectionChanged" FontSize="18" FontFamily="Calibri" BorderBrush="Black">
