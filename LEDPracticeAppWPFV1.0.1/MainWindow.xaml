<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LEDPracticeAppWPFV1._0._1"
         x:Class="LEDPracticeAppWPFV1._0._1.MainWindow"
        mc:Ignorable="d"
        Title="Poe Health Center " Height="500" Width="900" SizeToContent="WidthAndHeight">
    <Window.Resources>

    </Window.Resources>

    <Grid x:Name="panel" Panel.ZIndex=" 0" Height="500" Width="900" Margin="0,0,0,2"  >
      
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel x:Name="StackPanel1" HorizontalAlignment="Left" Height="400" VerticalAlignment="Top" Width="240">
            <Button x:Name="interactiveBrainButton" Content="Interactive Brain" Height="80" Click="interactiveBrainButton_Click"/>
            <Button x:Name="simulationButton" Content="Simulation" Height="80" Click="simulationButton_Click"/>
            <Button x:Name="serialCommsButton" Content="Serial Communications Test" Height="80" Click="serialCommsButton_Click"/>
            <Button x:Name="middleSchoolButton" Content="5th - 8th Grade" Height="80" Click="middleSchoolButton_Click"/>
            <Button x:Name="highSchoolButton" Content="9th - 12th Grade" Height="80" Click="highSchoolButton_Click"/>
        </StackPanel>
        <Canvas x:Name="myCanvas" Panel.ZIndex="1" HorizontalAlignment="Left" Height="494" Margin="5,10,-5,-12" VerticalAlignment="Top" Width="510" Grid.Column="1" Grid.RowSpan="2"/>



    </Grid>
</Window>
