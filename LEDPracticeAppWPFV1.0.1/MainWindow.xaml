<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LEDPracticeAppWPFV1._0._1"
         x:Class="LEDPracticeAppWPFV1._0._1.MainWindow"
        mc:Ignorable="d"
        Title="Poe Health Center " Height="600" Width="904" SizeToContent="WidthAndHeight" ResizeMode="CanResizeWithGrip">
    <Window.Resources>

    </Window.Resources>
    <DockPanel>
        <Viewbox DockPanel.Dock ="Left" Canvas.Left="0" Canvas.Top="0"  Stretch="Fill">
            <Canvas Margin="0,0,0,0" Height=" 600" Width="900">
                <Viewbox Height="600" VerticalAlignment="Top" Width="220" RenderTransformOrigin="0.5,0.5" Stretch="Fill">
                    <Canvas x:Name="buttonPanel" HorizontalAlignment="Left" Height="470" VerticalAlignment="Top" Width="220" RenderTransformOrigin="0.5,0.5">
                        <Button x:Name="interactiveBrainButton" Content="Interactive Brain" Height="80" Click="interactiveBrainButton_Click" Width="220" Canvas.Top ="0" RenderTransformOrigin="0.5,0.5"/>
                        <Button x:Name="simulationButton" Content="Simulation" Height="80" Click="simulationButton_Click" Canvas.Top="80" Width="220"/>
                        <Button x:Name="serialCommsButton" Content="Serial Communications Test" Height="70" Click="serialCommsButton_Click" Width="220" Canvas.Top="400" RenderTransformOrigin="0.5,0.5"/>
                        <Button x:Name="middleSchoolButton" Content="5th - 8th Grade" Height="80" Click="middleSchoolButton_Click" Canvas.Top="160" Width="220"/>
                        <Button x:Name="highSchoolButton" Content="9th - 12th Grade" Height="80" Click="highSchoolButton_Click" Canvas.Top="240" Width="220"/>
                        <Button x:Name="editingButton" Content ="Settings" Height="80" Click="editingButton_Click" Canvas.Top="320" Width="220"/>
                        <Label x:Name="pageMarker" Content="" Background="#FFE41212" Visibility="Hidden" Height="80" Canvas.Top="400" Width="20"/>
                    </Canvas>
                </Viewbox>
                <Viewbox Stretch="Fill" Height="600" Canvas.Left="220" Width="680">
                    <Canvas x:Name="myCanvas" Panel.ZIndex="1" HorizontalAlignment="Left" Height="600" VerticalAlignment="Top" Width="680" RenderTransformOrigin="0.5,0.5"/>
                </Viewbox>
            </Canvas>
        </Viewbox>
    </DockPanel>
</Window>
