<UserControl x:Class="LEDPracticeAppWPFV1._0._1.interactiveBrainControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LEDPracticeAppWPFV1._0._1"
             mc:Ignorable="d" Height="500" Width="655">
    <Grid Margin="0,0,10,0">
        <Button x:Name="goButton" Content="Go!" HorizontalAlignment="Left" Margin="350,360,0,0" VerticalAlignment="Top" Width="75" Click="goButton_Click"/>
        <TextBox x:Name="selectionMessageBox" HorizontalAlignment="Left" Height="40" Margin="235,170,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="280" TextChanged="selectionMessageBox_TextChanged"/>
        <ListBox x:Name="brainPartsListBox" HorizontalAlignment="Left" Height="100" Margin="150,325,0,0" VerticalAlignment="Top" Width="100" SelectionChanged="brainPartsListBox_SelectionChanged">
            <ListBoxItem x:Name="amygdala" Content="amygdala"/>
            <ListBoxItem x:Name="cerebellum" Content="cerebellum"/>
            <ListBoxItem x:Name="pituitaryGland" Content="Pituitary Gland" />
            <ListBoxItem x:Name="temporalLobe" Content="Temporal Lobe"/>
            <ListBoxItem x:Name="frontalLobe" Content="Frontal Lobe"/>
            <ListBoxItem x:Name="brainstem" Content="Braintstem"/>
            <ListBoxItem x:Name="occipitalLobe" Content="Occipital Lobe"/>
            <ListBoxItem x:Name="hippocampus" Content="Hippocampus"/>
            <ListBoxItem x:Name="parietalLobe" Content="Parietal Lobe"/>
            <ListBoxItem/>
        </ListBox>

    </Grid>
</UserControl>
